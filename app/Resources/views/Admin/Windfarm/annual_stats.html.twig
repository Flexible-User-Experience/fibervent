{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
<div class="sonata-ba-show">
    <div class="sonata-ba-view row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title" style="margin-bottom:30px;"><strong>{{ 'admin.audit.generate_xls' | trans }} {{ object.name }}</strong></h4><br>
                    <div class="box-body table-responsive no-padding">
                        {% if form.year.vars.label is defined %}
                            {{ form_start(form, {action: path('admin_app_windfarm_excelAttachment', {id: object.id}), method: 'GET'}) }}
                            {{ form_rest(form) }}
                            {{ form_end(form) }}
                        {% else %}
                            <div class="alert alert-danger" role="alert">
                                {{ 'admin.windfarm.no_audits' | trans }}.
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
