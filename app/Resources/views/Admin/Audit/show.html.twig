{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
<div class="sonata-ba-show">
    <div class="sonata-ba-view row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">AUDITORIA</h4>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            <tr class="sonata-ba-view-container">
                                <td>{{ object.windmill.windfarm.customer }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <td>{{ object.windmill.windfarm }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <td>{{ object.windmill }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <td>{{ object.beginDate | date('d/m/Y H:i') }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <td>{{ object.operators | join(', ') }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% for auditWindmillBlade in object.auditWindmillBlades %}
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h4 class="box-title">DESCRIPCIÓ DE DANYS PALA {{ loop.index }}</h4>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>N. Dany</th>
                                    <th>Codi</th>
                                    <th>Posició</th>
                                    <th>Radi</th>
                                    <th>Distància BA</th>
                                    <th>Mesura</th>
                                    <th>Categoria</th>
                                    <th>Estat</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for bladeDamage in auditWindmillBlade.bladeDamages %}
                            <tr class="sonata-ba-view-container">
                                <td>{{ bladeDamage.number }}</td>
                                <td>{{ bladeDamage.damage.code }}</td>
                                <td>{{ bladeDamage.position }}</td>
                                <td>{{ bladeDamage.radius }}</td>
                                <td>{{ bladeDamage.distance }}</td>
                                <td>{{ bladeDamage.size }}</td>
                                <td>{{ bladeDamage.damageCategory.category }}</td>
                                <td>{{ bladeDamage.status }}</td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
