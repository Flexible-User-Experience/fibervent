{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">FIBERVENT</h4>
                        <div class="box-body table-responsive no-padding">
                            <table class="table">
                                <thead>
                                <tr align="center" valign="middle">
                                    <th colspan="2">INSPECCIÓN DE PALAS DEL PARQUE
                                        EÓLICO {{ object.windmill.windfarm.name }}</th>
                                </tr>
                                <tr align="center" valign="middle">
                                    <th colspan="2">INFORME INDIVIDUAL AEROGENERADOR {{ object.windmill.code }}</th>
                                </tr>
                                <tr align="center" valign="middle">
                                    <th colspan="2">{{ object.windmill.windfarm.pdfLocationString }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr class="sonata-ba-view-container">
                                    <th>PAÍS/REGIÓ</th>
                                    <td>{{ object.windmill.windfarm.state.name }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>PARC EÒLIC</th>
                                    <td>{{ object.windmill.windfarm }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>MODEL PALA</th>
                                    <td>{{ object.windmill.bladeType }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>TOTAL No. AG / Capacitat PE</th>
                                    <td>{{ object.windmill.windfarm.pdfTotalPowerString }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>Posada en servei (anys del PE)</th>
                                    <td>{{ object.windmill.windfarm.pdfYearString }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>O&M REGIONAL MANAGER</th>
                                    <td>{{ object.windmill.windfarm.manager }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>TÈCNICS D'INSPECCIÓ</th>
                                    {#<td>{{ object.operators.values |format}</td>#}
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>TIPUS D'INSPECCIÓ</th>
                                    <td>TERRA (Telescopi FIBERVENT)</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>DATA D'INSPECCIÓ</th>
                                    <td>{{ object.pdfEndDateString }}</td>
                                </tr>
                                <tr class="sonata-ba-view-container">
                                    <th>Num. AG / Pales inspeccionades</th>
                                    <td>1 AG / 3 palas</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            {% for auditWindmillBlade in object.auditWindmillBlades %}
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h4 class="box-title">DESCRIPCIÓ DE DANYS PALA {{ loop.index }}</h4>
                            <div class="box-body table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>N. Dany</th>
                                        <th>Codi</th>
                                        <th>Posició</th>
                                        <th>Radi</th>
                                        <th>Distància BA</th>
                                        <th>Mesura</th>
                                        <th>Categoria</th>
                                        <th>Estat</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for bladeDamage in auditWindmillBlade.bladeDamages %}
                                        <tr class="sonata-ba-view-container">
                                            <td>{{ bladeDamage.number }}</td>
                                            <td>{{ bladeDamage.damage.code }}</td>
                                            <td>{{ bladeDamage.position }}</td>
                                            <td>{{ bladeDamage.radius }}</td>
                                            <td>{{ bladeDamage.distance }}</td>
                                            <td>{{ bladeDamage.size }}</td>
                                            <td>{{ bladeDamage.damageCategory.category }}</td>
                                            <td>{{ bladeDamage.status }}</td>
                                        </tr>
                                        {% if bladeDamage.photos | length > 0 %}
                                            <tr>
                                                <td colspan="2">
                                                    {% for photo in bladeDamage.photos %}
                                                        <img
                                                             src="{{ vich_uploader_asset(photo, 'imageFile') | imagine_filter('128x128') }}"
                                                             alt="{{ photo.imageName }}">
                                                    {% endfor %}
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
