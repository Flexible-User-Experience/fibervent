{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field%}
    {% spaceless %}
        <div>
            {% if object.roles %}
                {% for role in object.roles %}
                    {% if role == 'ROLE_USER' %}
                        {% set status = 'default' %}
                        {% set text = 'usuari' %}
                    {% elseif role == 'ROLE_CUSTOMER' %}
                        {% set status = 'primary' %}
                        {% set text = 'client' %}
                    {% elseif role == 'ROLE_OPERATOR' %}
                        {% set status = 'success' %}
                        {% set text = 'operari' %}
                    {% elseif role == 'ROLE_TECHNICIAN' %}
                        {% set status = 'info' %}
                        {% set text = 't√®cnic' %}
                    {% elseif role == 'ROLE_ADMIN' %}
                        {% set status = 'warning' %}
                        {% set text = 'administrador' %}
                    {% elseif role == 'ROLE_SUPER_ADMIN' %}
                        {% set status = 'danger' %}
                        {% set text = 'super administrador' %}
                    {% else %}
                        {% set status = 'success' %}
                        {% set text = '---' %}
                    {% endif %}
                    <span class="label label-{{ status }}" style="margin-right:10px">{{ text }}</span>
                {% endfor %}
            {% else %}
                ---
            {% endif %}
        </div>
    {% endspaceless %}
{% endblock %}
